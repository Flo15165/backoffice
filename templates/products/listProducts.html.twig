{% extends "base.html.twig" %}

{% block title %}

	{{title}}

{% endblock %}

{% block content %}

    <h2>{{h2}}</h2>
    <button type="button" class="btn btn-success" onclick="window.location.href='/addProducts'">Ajouter un produit</button>
    <table class='table'>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td><button type="button" class="btn btn-primary" onclick="window.location.href='/modifProducts/?id={{product.id}}'"> Modifier</button></td>
                    <td><button type="button" class="btn btn-danger" onclick="window.location.href='/deleteProducts/?id={{product.id}}'">Supprimer</button></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}