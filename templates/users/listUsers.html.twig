{% extends "base.html.twig" %}

{% block title %}

	{{title}}

{% endblock %}


{% block content %}

	<h2>{{h2}}</h2>
    <button type="button" class="btn btn-success" onclick="window.location.href='/addUsers'">Ajouter un utilisateur</button>
    <table class='table'>
        <thead>
            <tr>
                <th>ID</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Nom d'utilisateur</th>
                <th>Password</th>
                <th>Budget</th>
                <th>Admin</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.first_name }}</td>
                    <td>{{ user.last_name }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.budget }}</td>
                    <td>{{ user.is_admin }}</td>
                    <td><button type="button" class="btn btn-primary" onclick="window.location.href='/modifUsers/?id={{user.id}}'"> Modifier</button></td>
                    <td><button type="button" class="btn btn-danger" onclick="window.location.href='/deleteUsers/?id={{user.id}}'">Supprimer</button></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
